<section id="edit-post">
  <div id="dashboard-header">
    <h2 id="dashboard-title">Edit</h2>
  </div>
  <form action="/api/post/:id/update" method="put" id="edit-form">
    <div id="post-title">
      <label for="title">Post Title</label>
      <input type="text" name="title" id="title">
    </div>
    <div id="post-summary">
      <label for="summary">Post Summary</label>
      <input type="text" name="summary" id="summary">
    </div>
    <div id="post-content">
      <label for="content">Full Post Content</label>
      <input type="text" name="content" id="content">
    </div>
  </form>
  <button type="submit" form="edit-form">Save Change</button>
  <form action="/api/post/:id/delete" method="delete" id="delete-form" class="hidden"></form>
  <button type="submit" form="delete-form">Delete Post</button>
</section>